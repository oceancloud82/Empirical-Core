.cms-form
  = form_for [:cms, @user] do |f|
    = f.label :name
    = f.text_field :name
    = f.label :email
    = f.text_field :email
    = f.label :username
    = f.text_field :username
    = f.label :role
    = f.select :role, [['student', 'student'], ['teacher', 'teacher'], ['admin', 'admin'], ['staff', 'staff']]
    = f.label :classcode
    = f.text_field :classcode
    = f.label :password
    = f.password_field :password
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    = f.submit 'Save'
  = link_to 'Destroy', [:cms, @user], method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger destroy'